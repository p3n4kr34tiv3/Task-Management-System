{
  "manifest_version": 3,
  "name": "Google Business Profile Scraper",
  "version": "1.0",
  "description": "Scrape data dari profil bisnis Google dan export ke CSV/Excel",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://maps.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Business Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/maps/*",
        "https://maps.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}